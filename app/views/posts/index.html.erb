<%= stylesheet_link_tag('post-index')%>
  
<div class="post-index-container">
 <div class="user-description">
    <div class="img-div"><%= image_tag "" %></div>
    <div class="user-name">
      <h2><%= @user.name %></h2>
      <h6>Number of posts: <%= @user.posts_counter %></h6>
    </div>
    </div>

<% @posts.each do |post| %>
<div class="title-text">
    <h2><%= post.title %></h2>
    <p><%= post.text %></p>
    <div class="comment-count">
      <span class="comment">Comments: 20</span> <span class="like"span>Likes: 10</span>
    </div>
    </div>
<% end %>
</div>

<% if @post.present? %>
  <% @post.recent_comments.each do |comment| %>
    <div class="comment-section">
      <h4><%= comment.user.name %></h4>
      <p><%= comment.text %></p>
    </div>
  <% end %>
<% end %>
</div>




