<div id="user-details">
  <div>
    <div><%= image_tag "" %></div>
    <div>
      <h2><%= @user.name %></h2>
      <h5>Number of posts: <%= @user.posts_counter %></h5>
    </div>
    <div>
      <h3>Bio</h3>
      <p><%= @user.bio%></p>
    </div>
  </div>

  <% @user.recent_posts.each do |post| %>
    <div>
    <h3><%= post.title %></h3>
    <div><%= post.text %></div>
    <div>
      <span>Comments: 20</span> <span>Likes: 10</span>
    </div>
  </div>
  <% end %>
  <a href="/users/<%= @user.id %>/posts" id="user-btn">See all posts</a>
</div>